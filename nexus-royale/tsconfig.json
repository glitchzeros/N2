{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@engine/*": ["engine/*"],
      "@game/*": ["game/*"],
      "@ui/*": ["ui/*"],
      "@content/*": ["content/*"],
      "@platform/*": ["platform/*"]
    },
    "outDir": "dist"
  },
  "include": ["src", "tests"]
}
